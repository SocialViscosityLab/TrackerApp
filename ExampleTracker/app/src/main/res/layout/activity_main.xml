<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.dani.exampletracker.MainActivity">

    <Button
        android:id="@+id/go_to_map_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/rouded_primary_button"
        android:text="@string/go_to_map"
        android:textColor="@color/highlight"/>

    <Button
        android:id="@+id/go_to_radar_button"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/go_to_map_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rouded_primary_button"
        android:text="@string/go_to_radar"
        android:textColor="@color/highlight"/>

</RelativeLayout>
